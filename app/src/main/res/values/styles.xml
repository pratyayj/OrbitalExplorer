<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionOverflowButtonStyle">@style/OverflowTheme</item>
    </style>

    <style name="AppTheme.ButtonSignUp" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorSignButton</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ButtonFilter" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ButtonClearHistory" parent="AppTheme">
        <item name="colorButtonNormal">@color/purpleHM</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPurpleLLL</item>
        <item name="colorPrimary">@color/colorYellowLLL</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:color">@color/pastelOrange</item>
    </style>

    <style name ="PopUpTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@drawable/poi_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverflowTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/overflow</item>
    </style>

    <style name="UserToRateBar" parent="AppTheme">
        <item name="colorControlNormal">@color/beigeHM</item>
        <item name="colorControlActivated">@color/pastelOrange</item>
    </style>

</resources>
